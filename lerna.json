{
  "useWorkspaces": true,
  "packages": [
    "packages/*/*"
  ],
  "version": "1.1.0",
  "command": {
    "run": {
      "npmClient": "yarn"
    },
    "version": {
      "allowBranch": "main",
      "ignoreChanges": [
        "*.md"
      ],
      "message": "chore(release): publish",
      "conventionalCommits": true,
      "createRelease": true
    },
    "publish": {
      "allowBranch": "main",
      "conventionalCommits": true
    }
  }
}
