{
  "useWorkspaces": true,
  "packages": ["packages/*/*"],
  "version": "independent",
  "command": {
    "run": {
      "npmClient": "yarn"
    },
    "version": {
      "allowBranch": "main",
      "ignoreChanges": [
        "*.md",
        "__test__/**",
        "__fixtures__/**",
        "**/*.test.{j|t}s",
        "@(!(package)).json"
      ],
      "message": "chore(release): publish",
      "conventionalCommits": true,
      "createRelease": "github"
    },
    "publish": {
      "allowBranch": "main",
      "conventionalCommits": true
    }
  },
  "changelogPreset": {
    "name": "conventionalcommits"
  }
}
