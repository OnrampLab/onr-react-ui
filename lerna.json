{
  "useWorkspaces": true,
  "packages": ["packages/*/*"],
  "version": "0.2.3",
  "command": {
    "run": {
      "npmClient": "yarn"
    },
    "version": {
      "allowBranch": "main",
      "ignoreChanges": ["*.md"],
      "message": "chore(release): publish",
      "conventionalCommits": true,
      "createRelease": true
    },
    "publish": {
      "allowBranch": "main",
      "conventionalCommits": true
    }
  }
}
