{
  "name": "@onr/cli",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "source": "src/index.ts",
  "types": "types/index.d.ts",
  "scripts": {
    "dev": "cp -r ./src/templates ./lib/ && tsup --watch",
    "start": "node ./lib/index.js a",
    "lint": "prettier -c 'src/**/*'; eslint src --ext .ts,.tsx",
    "format": "prettier --write 'src/**/*'; eslint src --fix --ext .ts,.tsx",
    "build": "tsc && cp -r ./src/templates ./lib",
    "prepublishOnly": "yarn build",
    "test": "jest --coverage --passWithNoTests"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "chalk": "^3.0.0",
    "commander": "^5.0.0",
    "figlet": "^1.3.0",
    "inquirer": "^7.1.0",
    "inquirer-fuzzy-path": "^2.2.0",
    "log-symbols": "^3.0.0",
    "memfs": "^3.1.2",
    "mustache": "^4.0.1"
  },
  "devDependencies": {
    "@onr/eslint-config": "^0.6.5",
    "@onr/prettier-config": "^2.0.0",
    "@types/figlet": "^1.5.4",
    "@types/inquirer": "^6.5.0",
    "@types/inquirer-fuzzy-path": "^2.3.1",
    "@types/jest": "^29.5.12",
    "@types/mustache": "^4.0.1",
    "@types/node": "^14.14.21",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "jest-cli": "^29.6.1",
    "jest-teamcity": "^1.10.0",
    "memory-fs": "^0.5.0",
    "minimist": "^1.2.5",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.1",
    "tslib": "^2.6.3",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4"
  },
  "prettier": "@onr/prettier-config",
  "jest": {
    "testResultsProcessor": "jest-teamcity",
    "coverageDirectory": "<rootDir>/coverage",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/*.spec.(ts|js)"
    ],
    "setupFiles": [
      "./test/unit/mock.setup.js"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    }
  },
  "resolutions": {
    "minimist": "^1.2.5"
  },
  "publishConfig": {
    "access": "public"
  }
}
